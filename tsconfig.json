{
  "compilerOptions": {
    "target": "es6",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "allowJs": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "outDir": "./build",
    "baseUrl": "./",
    "paths": {}
  },
  "exclude": ["node_modules", "build"],
  "include": ["src"]
}
